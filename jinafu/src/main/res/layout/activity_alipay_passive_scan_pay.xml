<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/margin_16"
    >

    <ImageView
        android:id="@+id/img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        />

    <TextView
        android:id="@+id/tv_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text=""
        android:textSize="@dimen/font_22"
        />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="@color/md_red_400"
        android:textSize="@dimen/font_18"
        />

    <com.dd.CircularProgressButton
        android:id="@+id/btn_tmf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_22"
        app:cpb_colorIndicator="@color/colorPrimary"
        app:cpb_colorIndicatorBackground="@android:color/white"
        app:cpb_paddingProgress="5dp"
        app:cpb_selectorIdle="@drawable/btn_circular_idle_selector"
        app:cpb_textIdle="@string/pay_scan"
        />


</LinearLayout>